package comet.game.lanes
{

    /**
    * The LongNoteEntityState class provides constant values to specify the state of the long note entity.
    *
    * @author Susisu
    */
    public class LongNoteEntityState
    {

        /**
        * Specifies that the long note entity is default state.
        */
        public static const DEFAULT:int = 0;

        /**
        * Specifies that the long note entity is hitting state.
        */
        public static const HITTING:int = 1;

        /**
        * Specifies that the long note entity is disabled state.
        */
        public static const DISABLED:int = 2;

    }

}
